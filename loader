<!DOCTYPE html>
<html>
   <head>
      <style>
         #loader {
             width:0%;
              background-color:#ffd600;
              height: 3px; 
              position: fixed ;
              top: 0;
              left: 0;
              z-index:100
            }
      </style>
   </head>
   <body>
      <div id="loader"></div>
   </body>
   <script>
      
         let loader = document.getElementById("loader");
         let offSetLeft ; 
         
         window.addEventListener("scroll", event=>{
               offSetLeft = document.body.offsetHeight - document.body.clientHeight;
               loader.style.width = `${(pageYOffset / offSetLeft) * 100}%`;
           
         })
   </script>
</html>
